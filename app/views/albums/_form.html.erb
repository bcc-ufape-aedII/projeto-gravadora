<%= form_with(model: album) do |form| %>
  <% if album.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(album.errors.count, "error") %> prohibited this album from being saved:</h2>

      <ul>
        <% album.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :titulo, style: "display: block" %>
    <%= form.text_field :titulo %>
  </div>

  <div>
    <%= form.label :data_lancamento, style: "display: block" %>
    <%= form.date_field :data_lancamento %>
  </div>

  <div>
    <%= form.label :artista_id, style: "display: block" %>
    <%= form.collection_select :artista_id, Artistum.all, :id, :nome_artistico, { prompt: 'Selecione um Artista' }, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :funcionario_id, style: "display: block" %>
    <%= form.collection_check_boxes :funcionario_ids, Funcionario.all, :id, :nome, class: 'form-control' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
